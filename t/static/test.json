{
	"polling": 5,
	"oneshot": 1,
	"log": {
		"level": "debug",
		"screen": "color",
		"file": "/tmp/joq-test.log"
	},
	"jobs": [
		{
			"name":"first",
			"shell":"echo \"first!\""
		},
		{
			"name":"countdown",
			"code":"for(qw/five four three two one/){ print \"$_\n\"; sleep 2; }"
		},
		{
			"name":"petoman",
			"shell":"echo 'prout'",
			"when": {"after":"first","count":1}
		},
		{
			"name":"final",
			"shell":"echo 'yeah!'",
			"when":{"after":"countdown and petoman","count":1}
		}
	]
}
